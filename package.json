{
    "name": "@js-bookings/js-app-server",
    "version": "1.0.3",
    "description": "TypeScript boilerplate for NPM or Github Packages",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "mocha --timeout 60000 --exit -r ts-node/register test/**/*.spec.ts",
        "clean": "rm -rf dist",
        "build": "tsc",
        "deploy": "npm publish",
        "prepublishOnly": "npm run clean && npm run build && cp -R dist lib",
        "postpublish": "rm -rf lib"
    },
    "files": ["lib/", "readme.md"],
    "keywords": ["typescript", "boilerplate"],
    "author": "Nicolas Minig",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/js-bookings/js-app-server.git"
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/express": "^4.17.9",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "chai": "^4.2.0",
        "mocha": "^8.1.3",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "typescript": "~4.0.3"
    },
    "dependencies": {
        "express": "^4.17.1"
    },
    "engines": {
        "node": ">=10"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    }
}
